// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  password String

  name  String
  group String

  isAdmin Boolean @default(false)

  token String
}

model Task {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  content     String

  lectureId    Int
}

model Case {
  id          Int    @id @default(autoincrement())
  name String
  input String
  expect String

  taskId Int
}

model Solution {
  id          Int    @id @default(autoincrement())
  userId      Int
  taskId      Int
  solution    String
}

model Lecture {
  id          Int   @id @default(autoincrement())
  name        String
  content     String
}